{% extends 'base.html.twig' %}

{% block title %}Titre index
{% endblock %}

{% block body %}
	<h1>Titre index</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Nom_titre</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for titre in titres %}
				<tr>
					<td>{{ titre.id }}</td>
					<td>{{ titre.nomTitre }}</td>
					<td>
						<a href="{{ path('titre_show', {'id': titre.id}) }}">show</a>
						<a href="{{ path('titre_edit', {'id': titre.id}) }}">edit</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="3">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<div>
		<a href="{{ path('titre_new') }}">Create new</a>
	</div>
	<div>
		<a href="{{ path('admin') }}">retour</a>
	</div>

{% endblock %}
