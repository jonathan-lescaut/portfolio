{% extends 'base.html.twig' %}

{% block title %}Competence index
{% endblock %}

{% block body %}
	<h1>Competence index</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Titre_competence</th>
				<th>Contenu_competence</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for competence in competences %}
				<tr>
					<td>{{ competence.id }}</td>
					<td>{{ competence.titreCompetence }}</td>
					<td>{{ competence.contenuCompetence }}</td>
					<td>
						<a href="{{ path('competence_show', {'id': competence.id}) }}">show</a>
						<a href="{{ path('competence_edit', {'id': competence.id}) }}">edit</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="4">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<div>
		<a href="{{ path('competence_new') }}">Create new</a>
	</div>
	<div>
		<a href="{{ path('admin') }}">retour</a>
	</div>
{% endblock %}
